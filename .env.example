# Porta do Flask
PORT=8000
FLASK_ENV=production
SECRET_KEY=change-me

# OAuth (use credenciais "Web application" no Google Cloud)
GOOGLE_CLIENT_SECRETS=/data/credentials.json
GOOGLE_SCOPES=https://www.googleapis.com/auth/drive

# PersistÃªncia
DATA_DIR=/data
STATE_PATH=/data/state.json
JOBS_DIR=/data/jobs
LOGS_DIR=/data/logs

# Comportamento
WORKERS=6
MODE_REPLACE=trash_then_copy     # trash_then_copy | update_media
HANDLE_SHORTCUTS=copy_as_shortcut # copy_as_shortcut | resolve_target
MAX_RETRIES=5
REPEAT_DEFAULT_MIN=0             # 0 = desabilitado
